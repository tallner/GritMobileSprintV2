<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChatFragment">

    <LinearLayout
        android:id="@+id/layout_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="2"
            android:text="username"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:src="@drawable/ic_person"></ImageView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_chat"
        android:layout_width="413dp"
        android:layout_height="492dp"
        android:layout_above="@+id/rel"
        android:layout_below="@id/layout_chat"
        app:layout_constraintBottom_toTopOf="@+id/rel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_chat"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/edit_sendmsg"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Write your message here"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"></EditText>

        <ImageButton
            android:id="@+id/btn_sendmessage"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_send">

        </ImageButton>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>